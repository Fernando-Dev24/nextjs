generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Definir modelo de base de datos
model Todo {
  id          String   @id @default(uuid()) // Marcamos como unico con @ y por defecto podemos darle un formato, en este caso, estamos mandando que el id sea en formato uuid
  description String
  complete    Boolean  @default(false)
  createdAt   DateTime @default(now()) // Valor por defecto del tiempo en el momento que se cree la instancia
  updatedAt   DateTime @updatedAt // @updatedAt tomara el tiempo en el que se actualice un registro siguiendo este modelo
}
